<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Basics -->
	<key>CFBundleName</key><string>Itemize</string>
	<key>CFBundleDisplayName</key><string>Itemize</string>
	<key>CFBundleExecutable</key><string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key><string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundlePackageType</key><string>APPL</string>
	<key>CFBundleShortVersionString</key><string>1.0</string>
	<key>CFBundleVersion</key><string>1</string>

	<!-- Launch screen (lege launchscreen is ok) -->
	<key>UILaunchScreen</key>
	<dict/>

	<!-- Interface (alleen iPhone in portrait; pas aan indien nodig) -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Privacy: camera (vereist voor fotograferen in-app) -->
	<key>NSCameraUsageDescription</key>
	<string>Nodig om foto’s van items te nemen.</string>

	<!-- (Alleen nodig als je rechtstreeks de Foto’s-bibliotheek leest/schrijft i.p.v. PHPicker) -->
	<!-- <key>NSPhotoLibraryUsageDescription</key><string>Toegang tot je foto’s om een afbeelding te kiezen.</string> -->
	<!-- <key>NSPhotoLibraryAddUsageDescription</key><string>Opslaan van gemaakte foto’s in je bibliotheek.</string> -->

	<!-- CloudKit sharing toggle indien je later delen gebruikt -->
	<!-- <key>CKSharingSupported</key><true/> -->
</dict>
</plist>